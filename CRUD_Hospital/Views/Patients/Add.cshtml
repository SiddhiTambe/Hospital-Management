@model CRUD_Hospital.Models.AddPatientViewModel

<h1>Add Patients</h1>

<form method="post" action="Add">
    <div class="mb-3">
        <label for="" class="from-label"> Patient Name </label>
        <input type="text" class="form-control" asp-for="PatientName" />
    </div>
    <div class="mb-3">
        <label for="" class="from-label">Address</label>
        <input type="text" class="form-control" asp-for="Address" />
    </div>
    <div class="mb-3">
        <label for="" class="from-label">Phone No</label>
        <input type="number" class="form-control" asp-for="Mobile" />
    </div>
    <div class="mb-3">
        <label for="" class="from-label">Registration Date</label>
        <input type="date" class="form-control" asp-for="RegistrationDate" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>